<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/book_item_margin_v"
    android:paddingEnd="@dimen/book_item_margin_h"
    android:paddingStart="@dimen/book_item_margin_h"
    android:paddingTop="@dimen/book_item_margin_v">

    <ImageView
        android:id="@+id/posts_detail_avatar_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/avatar_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/author_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/user_avatar_verify_official"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/posts_detail_avatar_view"
        app:layout_constraintTop_toTopOf="@id/posts_detail_avatar_view"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/posts_detail_author_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/book_item_margin_h"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_author_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/orange"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/posts_detail_create_time"
        app:layout_constraintStart_toEndOf="@id/posts_detail_avatar_view"
        app:layout_constraintTop_toTopOf="@id/posts_detail_avatar_view"
        tools:text="追书家的眼镜娘 lv.10"/>

    <TextView
        android:id="@+id/posts_detail_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_h3"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/posts_detail_avatar_view"
        app:layout_constraintStart_toStartOf="@id/posts_detail_author_view"
        app:layout_constraintTop_toBottomOf="@id/posts_detail_author_view"
        tools:text="前天"/>

    <TextView
        android:id="@+id/posts_detail_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/common_h1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/posts_detail_avatar_view"
        tools:text="盘点||追书2018年度盘点"/>

    <TextView
        android:id="@+id/posts_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/common_h2"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/posts_detail_title_view"
        tools:text="统统都是大神的书，简直赚到了，看书不用愁没钱了！"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_detail_rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_review_detail_rating"
        android:padding="15dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/posts_detail_desc"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="45dp"
            android:layout_height="58dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_cover_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textColor="@color/common_h1"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/book_rating_hint"
            app:layout_constraintStart_toEndOf="@+id/book_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="我是书名"/>

        <TextView
            android:id="@+id/book_rating_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:text="@string/book_review_detail_score"
            android:textColor="@color/common_h2"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_image"
            app:layout_constraintTop_toBottomOf="@id/book_title"/>

        <com.xzhou.book.widget.RatingBar
            android:id="@+id/review_detail_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/book_rating_hint"
            app:layout_constraintStart_toEndOf="@+id/book_rating_hint"
            app:layout_constraintTop_toTopOf="@id/book_rating_hint"
            app:starCount="5"
            app:starPadding="5dp"
            app:starSize="12dp"
            app:starSrc="@drawable/sel_review_detail_rating"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/posts_agreed_view"
        style="@style/CommonRoundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableStart="@drawable/sel_posts_agreed"
        android:text="@string/posts_agreed"
        app:layout_constraintBottom_toBottomOf="@id/posts_more_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/posts_more_view"
        tools:ignore="RelativeOverlap"/>

    <ImageView
        android:id="@+id/posts_more_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:scaleType="center"
        android:src="@mipmap/post_detail_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_detail_rating_layout"
        tools:ignore="ContentDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>